<Window x:Class="meidoCafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:meidoCafe"
        xmlns:viewModel ="clr-namespace:meidoCafe.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    
    <Border Background="#ffffff" CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image Source="Images/meidoCafe.png"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Height="70"/>

            <StackPanel Grid.Row="1">
                <RadioButton Style="{StaticResource MaterialDesignTabRadioButtonLeft}"
                             Margin="0 20 0 0"
                             IsChecked="True"
                             Content="Food" 
                             Command="{Binding FoodViewCommand}"/>
                
                <RadioButton Style="{StaticResource MaterialDesignTabRadioButtonLeft}"
                             Margin="0"
                             IsChecked="False"
                             Content="Drinks" 
                             Command="{Binding DrinkViewCommand}"/>

                <RadioButton Style="{StaticResource MaterialDesignTabRadioButtonLeft}"
                             Margin="0"
                             IsChecked="False"
                             Content="Products" />
                
            </StackPanel>

            <TextBox Width="200"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="10 5 5 5"
                     Grid.Column="1"/>

            <Button Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="0 0 10 0"
                    Background="#eeeeee"
                    BorderThickness="0"
                    Foreground="DarkSlateGray"
                    Name="closeButton"
                    Click="closeButton_Click">
                
                x
                
            </Button>
         
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
